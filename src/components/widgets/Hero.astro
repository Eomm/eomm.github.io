---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import type { CallToAction } from '~/types';

export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  tagline?: string;
  content?: string;
  actions?: string | CallToAction[];
  image?: string | any; // TODO: find HTMLElementProps
}

const {
  id,
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-6 md:py-10">
      <div class="container mx-auto flex flex-col-reverse md:flex-row items-center justify-between">
        <!-- Text Content (Left) -->

        <!-- pb-10 md:pb-16 max-w-5xl mx-auto -->
        <div class="md:w-2/3 md:pr-10 text-center md:text-left">
          {
            tagline && (
              <p
                class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase"
                set:html={tagline}
              />
            )
          }
          {
            title && (
              <h1
                class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200"
                set:html={title}
              />
            )
          }
          {subtitle && <p class="text-xl text-muted mb-6 dark:text-slate-300" set:html={subtitle} />}
          <p class="mb-4">
            I'm a passionate software developer and technical writer.<br />
            My heart lies in the world of open source technologies, where I find joy in both creating software and sharing my knowledge through the written word.
          </p>
          <p class="mb-4">
            Since 2018, I've been actively contributing to various open source projects, including Node.js and <Button variant="link" class='underline' href='https://www.fastify.dev/' target="_blank">Fastify</Button>.<br />
            While maintaining the Fastify ecosystem as a core contributor, I'm also focusing on my side projects, which include the <Button variant="link" class='underline' href='https://backend.cafe/' target="_blank">backend.cafe</Button> blog, book writing, and a open source projects built with anyone who has an idea and writes me a message.
          </p>
          <p>Currently, I work as a Senior Software Developer at
            <Button variant="link" class='underline' href='https://www.nearform.com/' target="_blank">NearForm</Button>.
          </p>
          {
            actions && (
              <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
                {Array.isArray(actions) ? (
                  actions.map((action) => (
                    <div class="flex w-full sm:w-auto">
                      <Button {...(action || {})} class="w-full sm:mb-0" />
                    </div>
                  ))
                ) : (
                  <Fragment set:html={actions} />
                )}
              </div>
            )
          }
          {content && <Fragment set:html={content} />}
        </div>
    
        <!-- Image (Right) -->
        <div class="md:w-1/3 text-center">
          {
            image && (
              <div class="relative m-auto max-w-5xl">
                {typeof image === 'string' ? (
                  <Fragment set:html={image} />
                ) : (
                  <Image
                    widths={[200, 360]}
                    sizes="(max-width: 359px) 200px"
                    loading="eager"
                    width={360}
                    class='rounded-full mx-auto mb-4'
                    {...image}
                  />
                )}
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>
